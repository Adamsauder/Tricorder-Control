{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "C:/Tricorder Control/Tricorder-Control/.venv/Scripts/python.exe",
      "args": [
        "-m",
        "pip",
        "install",
        "-r",
        "server/requirements.txt"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Python Server",
      "type": "shell",
      "command": "C:/Tricorder Control/Tricorder-Control/.venv/Scripts/python.exe",
      "args": [
        "server/enhanced_server.py"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Web Dependencies",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "npm", "install"],
      "options": {
        "cwd": "${workspaceFolder}/web",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Web Development Server",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "npm", "run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/web",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Web Application",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "npm", "run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/web",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Compile Defragmentor Firmware",
      "type": "shell",
      "command": "pio",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/firmware/defragmentor"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}/firmware/defragmentor"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Upload Defragmentor Firmware",
      "type": "shell",
      "command": "pio",
      "args": ["run", "--target", "upload"],
      "options": {
        "cwd": "${workspaceFolder}/firmware/defragmentor"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}/firmware/defragmentor"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Build and Upload Defragmentor",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Compile Defragmentor Firmware",
        "Upload Defragmentor Firmware"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Setup Complete Development Environment",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Install Python Dependencies",
        "Install Web Dependencies"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start Full System",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Python Server",
        "Start Web Development Server"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Quick Test Tricorder",
      "type": "shell",
      "command": "C:/Tricorder Control/Tricorder-Control/.venv/Scripts/python.exe",
      "args": [
        "server/quick_test.py"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
